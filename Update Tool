import pandas as pd
import numpy as np

april_data = pd.read_excel(r'C:\Users\matt.pettit\Desktop\AEP\2020 - 4\Source Files\AEP OH CRES Customer Counts - 202004.xlsx', index=False)
march_big = pd.read_excel(r'C:\Users\matt.pettit\Desktop\AEP\2020 - 3\To Post\2 Customer Counts\AEP Ohio CRES Customer Counts - March 2020.xlsx', index=False)

april = april_data.rename(columns={'Year':'AEP Ohio CRES Customer Counts', 'Month':'Unnamed: 1', 
                                  'Residential_Customer_Count':'Unnamed: 2', 'CI_Customer_Count':'Unnamed: 3',
                                  'Total_Customer_Count':'Unnamed: 4'})
                                  
april_matrix = march_big.append(april, sort=True)

date = 'April 2020 Update'
through = 'Data Updated Through January 2020'

april_matrix.iloc[0,0]=date
april_matrix.iloc[1,0]=through

april_matrix.to_excel(r'C:\Users\matt.pettit\Desktop\AEP\Pyton\AEP Ohio CRES Customer Counts - March 2020.xlsx', index=False)
